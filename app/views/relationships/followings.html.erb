<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<h1>Follow Users</h1>
 <% if user.following?(user) %>
 <p>ユーザーはいません</p>
 <% else %>
   <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= user.name %></td>
        <td>フォロー数: <%= user.followings.count %></td>
        <td>フォロワー数: <%= user.followers.count %></td>
   <% end %>
  <% end %>
      </tr>
   </tbody>
</table>
